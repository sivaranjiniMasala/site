{
  "version": 2,
  "name": "sivaranjini-masala",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap"
    },
    {
      "src": "/robots.txt",
      "dest": "/api/robots"
    }
  ],
  "functions": {
    "src/app/api/send-email/route.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "RESEND_API_KEY": "@resend_api_key",
    "SITE_URL": "@site_url",
    "SITE_NAME": "@site_name"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
